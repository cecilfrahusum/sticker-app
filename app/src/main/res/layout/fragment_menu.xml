<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="65dp"
        android:layout_marginBottom="30dp"
        android:textSize="60sp"
        android:textColor="@color/purple_500"
        android:textStyle="bold"
        android:text="Activist GO"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tagLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="20sp"
        android:text="Team up with your friends.\n\nRemove fascist stickers from the streets and make your local area safer for everyone.\n\nIt might even be fun!"
        android:textAlignment="center" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/logStickerButton"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cornerRadius="30dp"
        android:textSize="20sp"
        android:layout_marginBottom="5dp"
        android:text="Log a sticker"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mapButton"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cornerRadius="30dp"
        android:textSize="20sp"
        android:layout_marginBottom="5dp"
        android:text="See map"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/crewButton"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cornerRadius="30dp"
        android:textSize="20sp"
        android:layout_marginBottom="5dp"
        android:text="My crew"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/safetyInfoButton"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cornerRadius="30dp"
        android:textSize="20sp"
        android:layout_marginBottom="5dp"
        android:text="Safety info"/>

</LinearLayout>